{
  "name": "starter-electron-react-tailwind-vite-ts",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist-electron/index.js",
  "author": {
    "name": "Utsav Barnwal"
  },
  "description": "Starter tempalte for Electron with React and Tailwind in Typescript built with Vite",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/utsavdotme/starter-electron-react-tailwind-vite-ts"
  },
  "productName": "starter-electron-react-tailwind-vite-ts",
  "scripts": {
    "dev": "vite",
    "dev:web": "WEB_ONLY=true vite",
    "dev:electron": "pnpm build:electron && electron .",
    "build": "pnpm build:vite && pnpm build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "pnpm build && electron-builder",
    "dist:win": "pnpm build && electron-builder --win",
    "dist:mac": "pnpm build && electron-builder --mac",
    "dist:linux": "pnpm build && electron-builder --linux",
    "pack": "pnpm build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "electron-is-dev": "^3.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite": "^7.1.12",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "autoprefixer": "^10.4.4",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "9.39.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "^7.29.4",
    "postcss": "^8.4.12",
    "prettier": "2.6.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  },
  "build": {
    "asar": true,
    "files": [
      "dist-electron",
      "dist-vite"
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
